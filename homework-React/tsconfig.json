{
    "compilerOptions": {
        "baseUrl": "./",
        "sourceMap": true,
        "module": "commonjs",
        "target": "ES5",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "downlevelIteration": true,
        "lib": [
            "esnext",
            "dom",
            "scripthost"
        ],
        "outDir": "lib",
        "declaration": true,
        "jsx": "react"
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules",
        "assets",
        "dist"
    ]
}
